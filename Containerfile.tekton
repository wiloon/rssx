# ============================================
# Stage 1: Build Go binary
# ============================================
FROM golang:1.23-alpine AS builder

LABEL maintainer="wiloon <wiloon.wy@gmail.com>"

WORKDIR /build

# 安装构建依赖
RUN apk add --no-cache git gcc musl-dev sqlite-dev

# 复制 go.mod 和 go.sum（利用缓存）
COPY rssx-api/go.mod rssx-api/go.sum ./
RUN go mod download

# 复制源代码
COPY rssx-api/ ./

# 构建二进制文件
# CGO_ENABLED=1 因为 SQLite 需要 CGO
# -ldflags="-w -s" 减小二进制文件大小
RUN CGO_ENABLED=1 GOOS=linux GOARCH=amd64 \
    go build -ldflags="-w -s" -o rssx-api .

# 验证二进制文件
RUN chmod +x /build/rssx-api

# ============================================
# Stage 2: Runtime image
# ============================================
FROM alpine:3.19

LABEL maintainer="wiloon <wiloon.wy@gmail.com>"

# 安装运行时依赖
RUN apk add --no-cache \
    ca-certificates \
    tzdata \
    sqlite-libs

# 设置时区
ENV TZ=Asia/Shanghai

# 创建非 root 用户
RUN addgroup -g 1000 rssx && \
    adduser -D -u 1000 -G rssx rssx

# 创建数据目录
RUN mkdir -p /data/rssx/logs && \
    chown -R rssx:rssx /data/rssx

# 环境变量配置
ENV RSSX_RSS_SYNC_AUTO=true \
    RSSX_SECURITY_KEY="" \
    REDIS_ADDRESS="" \
    SYNC_DURATION=60 \
    NEWS_EXPIRE_TIME="-720h" \
    NEWS_GC_DURATION="24h" \
    LOG_LEVEL="info" \
    LOG_PATH="/data/rssx/logs/" \
    LOG_FILE_NAME="rssx.log" \
    DATABASE_PATH="/data/rssx/rssx.db"

# 从 builder 阶段复制二进制文件
COPY --from=builder /build/rssx-api /usr/local/bin/rssx-api

# 切换到非 root 用户
USER rssx

WORKDIR /data/rssx

# 健康检查
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

EXPOSE 8080

# 启动应用
CMD ["rssx-api"]
